    "astro",
    "personal-website",
    "portfolio",
    "react",
    "web",
    "development",
    "docker",
    "kubernetes",
    "cloud",
    "tailwindcss",
    "javascript"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format": "prettier --write \"**/*.{js,jsx,json,md,astro,yml,yaml}\" --plugin=prettier-plugin-astro",

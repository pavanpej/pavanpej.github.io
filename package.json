    "terser": "^5.43.1",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "lint-staged": {
    "*.{js,jsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
